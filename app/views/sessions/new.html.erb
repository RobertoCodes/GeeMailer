<h1 class="sign-header">Sign in to continue to GeeMailer</h1>

<div class="enter_form">
<br>
<form action="<%= session_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"></input>
  <input class="sign_in_input" type="text" value="" name="user[username]" placeholder="Email"></input><br>
  <input class="sign_in_input" type="password" value="" name="user[password]" placeholder="Password"></input><br>
  <h3 class="errors"><%= render partial: "layouts/errors"%><h3>
  <p>
  </p>
  <button class="log_button" type="submit" value="Sign In">Sign In</button>
</form>
<p>
</p>

</div>

<%=link_to "Create account", new_user_url %>
